@model Book
@{
    ViewBag.Title = "CreateBook";
}

<h2>CreateBook</h2>

@using (Html.BeginForm("AddBook", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label>Name Book</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Name)</span>
    </div>

    <div class="form-group">
        <label>NumberPages</label>
        @Html.TextBoxFor(m => m.NumberPages, new { @class = "form-control" })
        <span class="text-danger">@Html.ValidationMessageFor(m => m.NumberPages)</span>
    </div>

    <div class="form-group">
        <label>YearPublication</label>
        @Html.TextBoxFor(m => m.YearPublication, new { @class = "form-control" })
        <span class="text-danger">@Html.ValidationMessageFor(m => m.YearPublication)</span>
    </div>

    <div class="form-group">
        <label>ISBN</label>
        @Html.TextBoxFor(m => m.Isbn, new { @class = "form-control" })
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Isbn)</span>
    </div>

    <div class="form-group">
        <label>Author</label>
        @Html.DropDownListFor(m => m.AuthorId, (SelectList)ViewBag.Author, new { @class = "form-control" })
        <span class="text-danger">@Html.ValidationMessageFor(m => m.AuthorId)</span>
    </div>

    <div class="form-group">
        <label>Category</label>
        @Html.DropDownListFor(m => m.CategoryId, (SelectList)ViewBag.Categories, new { @class = "form-control" })
        <span class="text-danger">@Html.ValidationMessageFor(m => m.CategoryId)</span>
    </div>

    <div class="form-group">
        <label>BookCover</label>
        @Html.TextBoxFor(m => m.BookCover, new { @class = "form-control", type = "file" })
        <span class="text-danger">@Html.ValidationMessageFor(m => m.BookCover)</span>
    </div>

    <div class="form-group">
        <label>Upload Book</label>
        @Html.TextBoxFor(m => m.UploadBook, new { @class = "form-control", type = "file" })
        <span class="text-danger">@Html.ValidationMessageFor(m => m.UploadBook)</span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
}

