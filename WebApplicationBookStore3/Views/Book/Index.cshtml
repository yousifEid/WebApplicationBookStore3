@model List<DAL.Models.Book>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Create New Book", "CreateBook", "Book")

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>BookCover</th>
            <th>YearPublication</th>
            <th>NumberPages</th>
            <th>Author</th>
            <th>Category</th>
            <th>Upload Book</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <img src="@item.BookCover" height="100" />
                </td>
                <td>@item.YearPublication</td>
                <td>@item.NumberPages</td>
                <td>@item.Author.Name</td>
                <td>@item.Category.Name</td>
                <td align="center">
                    @if (item.UploadBook != null)
                    {
                        <div>
                            <a class="btn btn-primary" href="@item.UploadBook" target="_blank">
                                <i class="fas fa-file-pdf fa-2x"></i>
                            </a>
                            &nbsp;
                            <a class="btn btn-success" href="@item.UploadBook" target="_blank" download>
                                <i class="fas fa-download fa-2x"></i>
                            </a>
                        </div>
                    }
                </td>

                <td>
                    @Html.ActionLink("Edit", "EditBook", new { id = item.Id }, new { @class = "btn btn-warning" })
                </td>

                <td>
                    @Html.ActionLink("Delete", "DeleteBook", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

