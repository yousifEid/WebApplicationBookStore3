@model List<DAL.Models.Author>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Create New Author", "CreateAuthor", "Author")

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Name</th>
            <th>AboutAuthor</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    <img src="@item.Image" height="100" />
                </td>
                <td>@item.Name</td>
                <td>@item.AboutAuthor</td>


                <td>
                    @Html.ActionLink("Edit", "EditAuthor", new { id = item.Id }, new { @class = "btn btn-warning" })
                </td>

                <td>
                    @Html.ActionLink("Delete", "DeleteAuthor", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>

        }
    </tbody>
</table>


