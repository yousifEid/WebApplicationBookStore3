@model DAL.Models.Category
@{
    ViewBag.Title = "EditCategory";
}

<h2>EditCategory</h2>

@using (Html.BeginForm("ModifyCategory", "Category", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Name)</span>
    </div>

    <div class="form-group">
        <label>Description</label>
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Description)</span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info">Update</button>
    </div>
}

